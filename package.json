{
  "name": "magnesium-reminder-pwa",
  "version": "1.0.0",
  "description": "A cute PWA to remind you to take your magnesium daily",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:ts\" \"nodemon dist/server.js\"",
    "build": "npm run build:css && npm run build:ts",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./public/styles/output.css --minify",
    "build:ts": "tsc",
    "watch:css": "tailwindcss -i ./src/styles/input.css -o ./public/styles/output.css --watch",
    "watch:ts": "tsc --watch",
    "start": "npm run build && node dist/server.js"
  },
  "keywords": ["pwa", "reminder", "health"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  }
}
